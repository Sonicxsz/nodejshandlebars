
{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 m7">
      <div class="card">
        <div class="card-image">
          <img src="{{image}}" alt="{{title}}">
        </div>
        <div class="card-content"> 
            <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a href="course/{{id}}">Открыть</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}

{{else}}
<h1>Курсов пока нет</h1>
{{/if}}
