
{{#if courses.length}}
{{#each courses}}
<div class="row flex">
    <div class="col s5">
      <div class="card">
        <div class="card-image">
          <img src="{{image}}" alt="{{title}}">
        </div>
        <div class="card-content"> 
            <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action card-controll">
          <a href="courses/{{_id}}">Открыть</a>
          <a href="courses/{{_id}}/edit?allowed=true">Редактировать</a>
          <form action="/cart/add" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn btn-success">Купить</button>
          </form>
        </div>
      </div>
    </div>
  </div>
{{/each}}

{{else}}
<h1>Курсов пока нет</h1>
{{/if}}
