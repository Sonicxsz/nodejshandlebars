<h3>Редактировать курс {{title}}</h3>
<form action="/courses/edit" method="post">
    <div class="input-field">
            <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
            <label for="title">Имя курса</label>
            <span class="helper-text" data-error="Введите имя"></span>
    </div>
    <div class="input-field col s6">
            <input name="price" id="price" type="number" class="validate" required min="1" value="{{course.price}}">
            <label for="price">Цена курса</label>
            <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field col s6">
            <input name="image" id="image" type="text" class="validate" required value="{{course.image}}">
            <label for="image">Url картинки</label>
            <span class="helper-text" data-error="Введите url"></span>
    </div>
    <input name="id" type="hidden" value="{{course.id}}">
    <button class="btn btn-success">Редактировать курс</button>
    
</form>

<form method="post" action="/courses/remove" style="margin-top: 2rem;">
        <input type="hidden" name="_id" value="{{course._id}}">
    <button class="btn red lighten-1">Удалить</button>
</form>